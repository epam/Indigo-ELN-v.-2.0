// See: http://eslint.org/
// See: https://www.npmjs.com/package/eslint-plugin-angular
// severity for a rule should be one of the following: 0 = off, 1 = warning, 2 = error
{
  "env": {
    "browser": true,
    "commonjs": true,
    "jquery": true,
    "jasmine": true
  },
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base/legacy",
    "angular"
  ],
  "rules": {
    "linebreak-style": 0,
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ],
    "consistent-return": 0,
    "block-scoped-var": 2,
    "complexity": 0,
    "radix": 0,
    "curly": [
      2,
      "all"
    ],
    "space-before-function-paren": [
      2,
      "never"
    ],
    "max-len": [
      1,
      {
        "code": 120
      }
    ],
    "func-names": 0,
    //    Should discuss
    "vars-on-top": 0,
    "eqeqeq": 1,
    "no-shadow": [
      2,
      {
        "allow": [
          "vm"
        ]
      }
    ],
    "line-comment-position": [
      1,
      {
        "position": "above"
      }
    ],
    "newline-after-var": [
      0,
      "never"
    ],
    "no-plusplus": 0,
    "newline-before-return": 1,
    "no-param-reassign": 0,
    "object-curly-spacing": [
      2,
      "never"
    ],
    "object-curly-newline": [
      0,
      {
        "minProperties": 2
      }
    ],
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": false
      }
    ],
    "spaced-comment": [
      1,
      "always"
    ],
    "angular/no-http-callback": 2,
    "angular/no-service-method": 1,
    "angular/angularelement": 0,
    "angular/controller-as-vm": [
      1,
      "vm"
    ],
    "angular/no-private-call": 0
  },
  "globals": {
    "angular": false,
    "_": false,
    "moment": false,
    "apiUrl": false
  }
}
